{
  "info": {
    "name": "Maiora",
    "description": "Postman collection for Maiora Library Management System APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "b1b8f4e2-8d3a-4f2f-9f2a-d2c9a5f3a9e7"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "bookId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Books",
      "item": [
        {
          "name": "List all books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books"
              ]
            }
          }
        },
        {
          "name": "List books by author",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books?author=H.%20G.%20Wells",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books"
              ],
              "query": [
                {
                  "key": "author",
                  "value": "H. G. Wells"
                }
              ]
            }
          }
        },
        {
          "name": "List books by category",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books?category=SCIENCE",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books"
              ],
              "query": [
                {
                  "key": "category",
                  "value": "SCIENCE"
                }
              ]
            }
          }
        },
        {
          "name": "Add new book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Time Machine\",\n  \"author\": \"H. G. Wells\",\n  \"isbn\": \"ISBN-1000\",\n  \"publicationDate\": \"1895-05-07\",\n  \"category\": \"SCIENCE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/books",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books"
              ]
            }
          }
        },
        {
          "name": "Update book",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"The Time Machine (Updated)\",\n  \"author\": \"H. G. Wells\",\n  \"isbn\": \"ISBN-1000\",\n  \"publicationDate\": \"1895-05-07\",\n  \"category\": \"SCIENCE\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/books/{{bookId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books",
                "{{bookId}}"
              ]
            }
          }
        },
        {
          "name": "Delete book",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/books/{{bookId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "books",
                "{{bookId}}"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Create user",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Alice\",\n  \"email\": \"alice@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users"
              ]
            }
          }
        },
        {
          "name": "Add book to reading list",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/reading-list/{{bookId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "{{userId}}",
                "reading-list",
                "{{bookId}}"
              ]
            }
          }
        },
        {
          "name": "Mark book as read",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/mark-read/{{bookId}}",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "{{userId}}",
                "mark-read",
                "{{bookId}}"
              ]
            }
          }
        },
        {
          "name": "Get personalized recommendations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/users/{{userId}}/recommendations?limit=5",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "{{userId}}",
                "recommendations"
              ],
              "query": [
                {
                  "key": "limit",
                  "value": "5"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
